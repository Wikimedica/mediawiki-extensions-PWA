{
	"name": "PWA",
	"version": "0.1a",
	"author": [
		"[https://www.mediawiki.org/wiki/User:Tinss Antoine Mercier-Linteau]"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:PWA",
	"descriptionmsg": "PWA-extension-description",
	"license-name": "GPL-2.0-or-later",
	"type": "skin",
	"requires": {
		"MediaWiki": ">= 1.31.0",
		"extensions": { "MobileFrontend": "*" }
	},
	"AutoloadClasses": {
		"MediaWiki\\Extension\\PWA\\PWA": "PWA.php"
	},
	"ResourceModules": {
		"ext.PWA.add-to-homescreen": {
			"localBasePath": "vendor/docluv/add-to-homescreen",
			"remoteExtPath": "PWA/vendor/docluv/add-to-homescreen",
			"scripts": ["src/addtohomescreen.js"],
			"targets": ["mobile", "desktop"]
		},
		"ext.PWA": {
			"localBasePath": "resources/ext.PWA",
			"remoteExtPath": "PWA/resources/ext.PWA",
			"scripts": ["PWA.js"],
			"styles": ["PWA.css"],
			"targets": ["mobile", "desktop"],
			"messages": ["PWA-add-to-home-screen"]
		},
		"ext.PWA.standalone": {
			"localBasePath": "resources/ext.PWA.standalone",
			"remoteExtPath": "PWA/resources/ext.PWA.standalone",
			"scripts": ["PWA.standalone.js"],
			"styles": ["PWA.standalone.css"],
			"targets": ["mobile", "desktop"]
		}
	},
	"ResourceFileModulePaths": {
	},
	"config": {
		"PWAConfigs": {
			"value": {
				"default": {
					"manifest": "MediaWiki:default-manifest.json",
					"manifest_type": "article",
					"patterns": ["/.*/"],
					"overrideHomeLinks": false,
					"apple-touch-icon": "wgLogo"
				}
			},
			"description": "Configurations for the PWAs availables in this MediaWiki installation.",
			"merge_strategy": "provide_default"
		},
		"PWAMobileSkin": {
			"value": { "default": "Minerva" },
			"description": "Skin used for the mobile version, set to false if there is no such skin."
		}
	},
	"Hooks": {
		"BeforePageDisplay": "MediaWiki\\Extension\\PWA\\PWA::onBeforePageDisplay",
		"ParserFirstCallInit": "MediaWiki\\Extension\\GetUserName\\GetUserName::onParserFirstCallInit"
	},
	"MessagesDirs": {
		"PWA": [
			"i18n"
		]
	},
	"manifest_version": 2
}
